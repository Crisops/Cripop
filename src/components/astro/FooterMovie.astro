---
import GendersMovie from './GendersMovie.astro';
import RateMovie from './RateMovie.astro';

import  {type MovieWithGenders } from "@/types/Genders";

interface Props {
  genders: MovieWithGenders
  rate: number
  index: number 
}

const {rate, index, genders} = Astro.props


---


<footer class="flex flex-col justify-center items-end gap-1 absolute w-full right-0 bottom-0 py-2 px-3 pointer-events-none z-[2]">
  <GendersMovie genders={genders} index={index}/>
  <RateMovie rate={rate}/>
</footer>