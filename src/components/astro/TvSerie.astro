---
  import { Image } from "astro:assets"

  interface Props {
    id: number
    name: string
    url_image: string
    overview: string
  }

  const { name, url_image, overview, id } = Astro.props

  const urlName = name?.replace(/\s/g, "-")

---




<article class="relative w-[500px] h-[500px] flex-1 transition-all duration-1000 ease-in-out overflow-hidden group hover:flex-grow-[2]">
  <a href="">
    <Image
    class={"absolute w-full h-full object-cover"}
    width={1080}
    height={720}
    src={url_image}
    alt={name}
    quality={"low"}
    />
    <div class="absolute w-full h-full bg-gradient-to-t from-black translate-y-[200%] transition-all delay-0 group-hover:translate-y-0 group-hover:delay-[1100ms]">
      <div class="absolute top-0 left-0 w-full h-full flex flex-col gap-6 px-10 justify-center">
        <div class="flex items-center">
          <span class=`font-Ubuntu text-white font-bold ${name.length <= 9 ?'text-9xl': 'text-7xl' } `>{name}</span>
        </div>
        <div class="flex flex-col justify-start items-start gap-3">
          <p class="text-white font-Noto_Sans font-light max-w-sm text-sm overflow-hidden line-clamp-5">{overview}</p>
          <a href=`tv/series/${id}/${urlName}` class="px-10 py-2 basis-0 text-white border border-zinc-700 transition-colors duration-300 ease-in text-sm font-Noto_Sans hover:bg-white hover:text-black">Ver</a>
        </div>
      </div>
    </div>
  </a>
</article>